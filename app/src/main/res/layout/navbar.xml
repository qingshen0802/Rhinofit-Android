<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_background_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nav_background_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
	    
	    <com.travis.rhinofit.customs.CustomImageButton
	        android:id="@+id/menuButton"
	        android:layout_width="@dimen/nav_icon_size"
	        android:layout_height="match_parent"
	        android:background="@null"
	        android:paddingLeft="@dimen/nav_icon_padding"
	        android:paddingRight="@dimen/nav_icon_padding"
	        android:scaleType="fitCenter"
	        android:src="@drawable/icon_menu" />
	
	    <TextView
	        android:id="@+id/navTitleTextView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:paddingLeft="@dimen/nav_title_padding"
            android:paddingRight="@dimen/nav_title_padding"
	        android:lines="1"
	        android:text="Title"
	        android:textColor="@android:color/white"
	        android:textSize="18sp" />

	</LinearLayout>

</RelativeLayout>
