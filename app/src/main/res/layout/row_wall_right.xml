<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="0dp"
    android:paddingRight="20dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/msgTextView"
            android:layout_toRightOf="@+id/btnRemove"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:background="@drawable/wall_rounded_corner_blue" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:text="X"
            android:gravity="center"
            android:id="@+id/btnRemove"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="3dp"
        android:layout_marginLeft="64dp"
        android:paddingBottom="3dp">

        <com.travis.rhinofit.utils.image.SmartImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/postImageView"
            android:src="@color/secondary_text_disabled_material_light"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/wall_userinfo_bg"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="3dp">

        <com.travis.rhinofit.utils.image.SmartImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/userImageView"
            android:layout_margin="2dp"
            android:src="@color/color_dark_grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/userNameTextView"
            android:lines="1"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
