<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid
        android:color="#11000000" >
    </solid>

    <!-- view border color and width -->
    <stroke
        android:width="@dimen/border_size"
        android:color="@null" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="@dimen/rounded_corner_padding"
        android:top="@dimen/rounded_corner_padding"
        android:right="@dimen/rounded_corner_padding"
        android:bottom="@dimen/rounded_corner_padding"    >
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="@dimen/rounded_corner" >
    </corners>

</shape>